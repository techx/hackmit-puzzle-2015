mixin puzzlePart(p)
    div.puzzlepart
        a(href=p.url)
            h3 Puzzle #{p.number}
        if p.timeout != 0 && !p.completionTimestamp
            p Please try again in #{p.timeout}.
        else
            form
                input(type="text", value=p.lastGuess)
            if (p.completionTimestamp)
                span âœ“
            else
                button Submit Answer

