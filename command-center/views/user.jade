extends layout
block head
    style.
        #puzzle, #submission-logs {
            margin-top: 50px;
        }
        th {
            text-align: left;
        }

        td, th {
            padding: 5px;
        }

        table {
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }
block content
    script.
        window.onload = function(){
            document.getElementById("flag-user").onclick = function(event){
                event.preventDefault();
                flagUser();
            }

            var flagUser = function(){
                var xmlhttp = new XMLHttpRequest();
                var reason = document.forms[0].reason.value;
                xmlhttp.open("POST", "/admin/users/#{user.githubUsername}?reason=" + reason, true);
                xmlhttp.onreadystatechange = function() {
                    if (xmlhttp.readyState === XMLHttpRequest.DONE) {
                        if (xmlhttp.status == 200 || xmlhttp.status == 201) {  
                            document.location.reload(true);
                        } else {
                            document.getElementById("error").innerHTML = "Oops, something went wrong.";
                        }
                    }
                };
                xmlhttp.send();
            }
        }
    div#error
    a(href="/admin/users") Back to All Users
    div#user-summary
        h2 User Information
        p 
            strong Github Username: 
            span= user.githubUsername
        p 
            strong Github Email: 
            span= user.githubEmail
        p 
            strong Creation Timestamp: 
            span= user.created
        p
            strong Suspicious: 
            span= user.isSuspicious
        p
            strong Suspicious Because: 
            span= user.reasonForSuspicion
        p 
            strong First Fifty?: 
            span= user.isFirstFifty
        p 
            strong Puzzle Completion Time: 
            span= user.completionTime

        form#suspicion-form
            label Reason for Suspicion? 
            input(type="text", value=user.reasonForSuspicion, name="reason")
        button#flag-user Flag User as Suspicious

    div#puzzle
        h2 Puzzle Information
        table
            tr
                th Number
                th Start
                th Last Guess
                th Completion
                th Last Timeout
                th Timeout Level
            for part in puzzleParts
                tr
                    td= part.number
                    td= part.createdAt
                    td= part.lastGuess
                    td= part.completionTimestamp
                    td= part.lastTimeoutTimestamp
                    td= part.timeoutLevel

    div#submission-logs
        h2 User Action Logs
        table
            tr
                th Puzzle
                th Guess
                th Correct
                th Timestamp
            for log in logs
                tr
                    td= log.puzzleNumber
                    td= log.guess
                    td= log.isCorrect
                    td= log.timestamp