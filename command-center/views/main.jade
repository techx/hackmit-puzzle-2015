extends layout
block head
block content
    script
        include ../public/js/main.js
    h1 What's up #{currentUser}
    div#error
    if puzzleParts.length == 0
        form
            button#start-button Start Puzzle!
    else
        if done
            h2.congrats YAY YOU FINISHED THE PUZZLE! very solve much impress
        for p in puzzleParts
            mixin puzzlePart(p)
    include puzzlePart